extends ./layout

block content
  .page-header
    h3 New Message
  form.form-horizontal(id='signup-form', method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group
      label.col-sm-3.control-label(for='body') Body
      .col-sm-7
        input.form-control(name='composedMessage', id='body', placeholder='Body Text', autofocus, required)
    .form-group
      .col-sm-offset-3.col-sm-7
        button.btn.btn-success(type='submit')
          i.fa.fa-user-plus
          | Signup
